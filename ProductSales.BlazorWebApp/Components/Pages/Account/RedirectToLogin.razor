    protected override void OnInitialized()
    {
        try
        {
            string returnUrl = Uri.EscapeDataString(NavigationManager.Uri);
            NavigationManager.NavigateTo($"Account/Login?returnUrl={returnUrl}", forceLoad: true);
        }
        catch (Exception ex)
        {
            string message = ex.Message;
        }
    }
}
