    //-------------------------------------------------------------------------------------------------

    [Parameter]
    public int? statusCode { get; set; }

    private string statusMessage = "Request could not be processed.";

    protected override void OnParametersSet()
    {
        if (statusCode == 404)
        {
            statusMessage = "The requested page does not exist!";
        }
    }
}