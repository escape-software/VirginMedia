@page "/StatusCode/{statusCode:int?}"
@inject ILogger<StatusCode> Logger

<div class="row">
    <div class="card alert bg-info text-white alert-info">
        <div class="card-header row">
            <div class="col-11"><h4>@statusMessage</h4></div>
        </div>
        <div class="card-body">
            <p>Click <a href="/">here</a> to return to Home page.</p>
        </div>
    </div>
</div>

@code {
    //-------------------------------------------------------------------------------------------------
